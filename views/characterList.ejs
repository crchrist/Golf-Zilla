<h1>Character Search</h1>
<p>Search for your favorite Rick and Morty character:</p>

<form method="POST" action="/characterSearch">
    <label for="characterName">Character Name: </label>
    <input id="characterName" type="text" name="characterName">
    <input class="subButton" type="submit">
  </form> 
<br>

<p>or look for ideas below...</p>


<ul>
 <% characters.forEach(function(character) { %>
  <li style="list-style-type: none;"><%= character.name %></li>
  <li style="list-style-type: none;"> <img src="<%= character.image %>" alt="<%= character.name %>"></li>


  <form method="POST" action="/favorite">
    <input hidden type="text" name="name" value="<%= character.name %>">
    <input hidden type="text" name="species" value="<%= character.species %>">
    <input hidden type="text" name="status" value="<%= character.status %>">
    <input hidden type="text" name="image" value="<%= character.image %>">

    <button type=“submit”>Add to Favorites</button>
    <br>
    <br>
  </form> 

 <% }) %>
</ul>

